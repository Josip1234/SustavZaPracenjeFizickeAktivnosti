package com.example.physical.activity.database;
import org.springframework.context.annotation.Bean;
import org.springframework.stereotype.Component;

@Component(name="Spajanje na bazu")
public class Connection implements Conn {
private String host;
private String user;
private String pass;
private String database;


public Connection(){
	this.host="localhost";
	this.user="root";
	this.pass="";
	this.database="physicalactivity";
}

public Connection(String host,String user,String pass,String database){
	this.host=host;
	this.user=user;
	this.pass=pass;
	this.database=database;
}
@Bean(name="Spoji se na bazu")
public void spoji(String host,String user,String pass,String database){
	
}
@Bean(name="Poruka")
public String poruka(){
	return "Uspje≈°no povezanni s bazom";
}

@Bean(name="Spajanje na bazu")
public Connection con(){
	return new Connection();
}

}
